<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="556.0" prefWidth="656.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tabela.accounting.controllers.MilkController">
   <children>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <children>
                  <ComboBox fx:id="cmbCustomer" prefWidth="150.0" promptText="Customer" />
                  <DatePicker fx:id="txtMilkDate" promptText="Milk Date" />
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#search" text="Search" />
                  <Button fx:id="btnClearSearch" mnemonicParsing="false" onAction="#clearSearch" text="Clear Search" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="btnAddCustomer" mnemonicParsing="false" onAction="#addMilk" text="Add Milk" />
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox fx:id="content" prefHeight="768.0" prefWidth="100.0" stylesheets="@../css/stylehseet.css" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tableMilk" minHeight="500.0" minWidth="500.0" prefHeight="354.0" prefWidth="737.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCustomerName" prefWidth="140.0" text="Customer Name" />
                <TableColumn fx:id="colMilkDate" prefWidth="130.0" text="Milk Date" />
                  <TableColumn fx:id="colMorningMilk" prefWidth="105.0" text="Morning Milk" />
                  <TableColumn fx:id="colEveningMilk" prefWidth="104.0" text="Evening Milk" />
                  <TableColumn fx:id="colMilkRate" prefWidth="76.0" text="Milk Rate" />
                  <TableColumn fx:id="colEdit" prefWidth="47.0" text="Edit" />
                  <TableColumn fx:id="colDelete" text="Delete" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>

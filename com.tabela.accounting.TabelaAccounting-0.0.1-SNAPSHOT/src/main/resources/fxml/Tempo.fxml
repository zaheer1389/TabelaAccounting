<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tabela.accounting.controllers.TempoController">
   <children>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <children>
                  <TextField fx:id="txtSearchText" promptText="Tempo Name" />
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#search" text="Search" />
                  <Button fx:id="btnClearSearch" mnemonicParsing="false" onAction="#clearSearch" text="Clear Search" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="btnAddTempo" mnemonicParsing="false" onAction="#addCustomer" text="Add Tempo" />
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox fx:id="content" prefHeight="768.0" prefWidth="100.0" stylesheets="@../css/stylehseet.css" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tempoTable" minHeight="500.0" minWidth="500.0" prefHeight="354.0" prefWidth="737.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colTempoName" prefWidth="239.0" text="Tempo Name" />
                  <TableColumn fx:id="colTempoNumber" prefWidth="159.0" text="Tempo Number" />
                  <TableColumn fx:id="btnEdit" minWidth="0.0" prefWidth="116.0" text="Edit" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>

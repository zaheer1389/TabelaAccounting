<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tabela.accounting.controllers.MilkCustomerController">
   <children>
      <HBox prefHeight="40.0" prefWidth="200.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <children>
                  <TextField fx:id="txtSearchText" promptText="Customer Name" />
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#search" text="Search" />
                  <Button fx:id="btnClearSearch" mnemonicParsing="false" onAction="#clearSearch" text="Clear Search" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="btnAddCustomer" mnemonicParsing="false" onAction="#addCustomer" text="Add Customer" />
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox fx:id="content" prefHeight="510.0" prefWidth="545.0" stylesheets="@../css/stylehseet.css" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="customerTable" minHeight="500.0" minWidth="500.0" prefHeight="354.0" prefWidth="737.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCustomerName" prefWidth="140.0" text="Customer Name" />
                <TableColumn fx:id="colCreatedDate" prefWidth="95.0" text="Created On" />
                  <TableColumn fx:id="colCustomerAddress" prefWidth="75.0" text="Address" />
                  <TableColumn fx:id="colMilkRate" prefWidth="75.0" text="Milk Rate" />
                  <TableColumn fx:id="colTempo" prefWidth="107.0" text="Tempo" />
                  <TableColumn fx:id="colPendingBill" prefWidth="67.0" text="Pending Bill" />
                  <TableColumn fx:id="colActive" prefWidth="75.0" text="Deactive" />
                  <TableColumn fx:id="btnEdit" prefWidth="75.0" text="Edit" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
